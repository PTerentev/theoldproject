@model IEnumerable<Domain.Entities.Recent>
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main" style="background: url(../../fonts/texture/3-fon-dlya-sayta.png)">

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 ">
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 " style="background-color: #101210; border: 6px double black; border-radius: 16px; min-height: 500px; margin-top: 60px; margin-bottom: 50px;" id="mainblock">
                <div class="row" style="background-color: #090809;">

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 300px; color: white; font-weight: bolder;border-bottom: 4px dashed #f5f5f0; margin-bottom: 40px;">
                        <img src="../../fonts/logo/News.png" alt="" style="position: center; height: 100%;width: 100% ">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="row">
                            @try
                            {
                                foreach (var item in Model)
                                {
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 newsrow">
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 imagerow">
                                                @Html.Raw("<img style='width: 100%; top: 0; left: 0; right: 0; height: 100%; position: absolute;' src=\"data:image/jpeg;base64,"
                                                  + Convert.ToBase64String(item.LinkSmallImg) + "\" />")

                                            </div>
                                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 textrow">
                                                <a href="/News/@item.Id"> <h1>@item.Caption</h1></a>
                                                <br>
                                                <p>@item.Text</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            catch
                            {
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 newsrow">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 imagerow">

                                        </div>
                                        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 textrow">
                                            <h1>Новостей</h1>
                                            <br>
                                            <p>Нет</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div id="results"></div>
                            @try
                            {

                                using (Ajax.BeginForm("AddNews", new AjaxOptions { UpdateTargetId = "results" }))
                                {
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 othernews text-center">
                                        <input type="submit" value="Другие новости" class="btn othernewsbutton" />

                                    </div>
                                }
                            }
                            catch
                            {

                            }

                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50px;"></div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">

            </div>


        </div>
    </div>
</div>

