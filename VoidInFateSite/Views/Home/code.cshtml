@model Domain.Entities.CodeImage
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../Content/specialstyle.css">
    <link rel="SHORTCUT ICON" href="../../fonts/logo/icon.png" type="image/png">
    <title>Разблокировать изображение</title>
    <link href="../../Content/bootstrap.css" rel="stylesheet" />
    <link href="../../Content/specialstyle.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">

</head>

<body>
    <div id="main" style=" background: url(../../fonts/texture/3-fon-dlya-sayta.png)">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 ">
                </div>
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 mainsize"  style="background-color: #101210; border: 6px double black; border-radius: 16px; min-height: 500px; margin-top: 60px; margin-bottom: 50px;" id="mainblock">
                    <div class="row" style="background-color: #101010; ">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-right" style="min-height: 30px;">
                            <a href="/Index" style="font-size: 50px; right: 0;color: #FFBF6C;">X</a>
                        </div>
                    </div>
                    <div class="row" style="background-color: #101010; min-height: 650px;" >
                        
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" style="margin-top: 50px; ">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2"></div>
                                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                    <div style="height: 450px;  background: url(../../fonts/logo/codeimage.jpg)   ; background-position: center center; border: 4px solid black; border-radius: 16px; "  id="results">

                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2"></div>
                            </div>
                            
                        </div>
                        @try
                        {
                        
                            using (Ajax.BeginForm("CodeResult", new AjaxOptions {UpdateTargetId = "results"}))
                            {
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" style="margin-bottom: 50px; padding-top: 30px;">
                                    <div style="margin-left: 40%; margin-bottom: 30px; margin-right: 40%">
                                        <input name="code" id="code" type="text" class="form-control " value="Введите код" style="width: 100%;"/>
                                    </div>
                                    
                                    <input class="asbutton gold-button " style="width: 30%; height: 50px;" value="Разблокировать картинку" type="submit">


                                </div>
                            }
                        }
                        catch
                        {

                        }
                       
                    </div>
                </div>
                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">

                </div>


            </div>
        </div>
    </div>
    <script src="../../Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/scripts/VoidScript.js")




</body>
</html>