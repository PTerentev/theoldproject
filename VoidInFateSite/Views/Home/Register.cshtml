@model string
@{
    
    ViewBag.Title = "Регистрация";
}

<div id="main" style="background: url(../../fonts/texture/3-fon-dlya-sayta.png)">
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 ">
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 " style="background-color: #101210; border: 6px double black; border-radius: 16px; min-height: 500px; margin-top: 60px;"  id="mainblock">
                <div class="row" style="background-color: #090809;">
                   
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 100px; color: white; font-weight: bolder;">
                        <h4>ГЛАВНАЯ / РЕГИСТРАЦИЯ /</h4>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2"></div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8" style="color: #9A8866;">
                                <form action="Register" role="form" method="post">
                                    <div class="form-group">
                                        <label for="UserName">Логин</label>
                                        <input name="UserName" id="UserName" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="Password">Пароль</label>
                                        <input name="Password" type="password" id="Password" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="ConfirmPassword">Повтори Пароль</label>
                                        <input name="ConfirmPassword" type="Password" id="ConfirmPassword" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="Email">Почта</label>
                                        <input name="Email" type="email" id="Email" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <div class="text-center">
                                            <input class="asbutton gold-button " style="width: 60%; height: 50px;" value="Создать" type="submit">

                                        </div>
                                    </div>
                                </form>
                                <div>
                                    @if (Model != null)
                                    {
                                        <p>@Model</p>
                                    }
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2"></div>
                        </div>
                                                                      
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50px;"></div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">

        </div>


    </div>
</div>


@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")




   