
@{
    
    ViewBag.Title = "Вход";
}

<div id="main" style="background: url(../../fonts/texture/3-fon-dlya-sayta.png)">

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 ">
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 " style="background-color: #101210; border: 6px double black; border-radius: 16px; min-height: 500px; margin-top: 60px;" id="mainblock">
                <div class="row" style="background-color: #090809;">

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 100px; color: white; font-weight: bolder;">
                        <h4>ГЛАВНАЯ / ВХОД В АККАУНТ /</h4>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="row">
                            <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1"></div>
                            <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10" style="color: #9A8866;">
                                <form action="Sign_in" class="form-signin" role="form" method="post">
                                    <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 18px;">
                                        <p>Введите вашу почту:</p>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left" style="height: 80px; color: #9A8866; font-size: 18px; font-weight: bolder;">
                                        <input name="Email" type="email" class="form-control" style="width: 80%" placeholder="Email address" required autofocus>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 20px;">
                                        <p>Введите пароль учетной записи:</p>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left" style="height: 80px; color: #9A8866; font-size: 18px; font-weight: bolder;">
                                        <input name="Password" type="password" style="width: 80%" class="form-control" placeholder="Password" required>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 20px;">

                                    </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left" style="min-height: 80px; font-size: 15px; font-weight: bolder;">
                                            <a href="#">Забыли свой пароль?</a><br>
                                            У вас нет аккаунта? <a href="/Register">Регистрация</a><br>
                                            <label style="left: 5%" class="checkbox">
                                                <input type="checkbox" name="Check" value="remember-me"> Remember me
                                            </label>
                                            @if (ViewBag.Message != null)
                                            {
                                                <br>
                                                <p>@ViewBag.Message</p>
                                                <br>
                                            }
                                            <input class="asbutton gold-button " style="width: 90%; height: 50px;" value="ВОЙТИ В ПРОФИЛЬ" type="submit">

                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50px;"></div>
                                    </div>
                                </form>
                                
                            </div>
                            <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1"></div>
                        </div>

                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50px;"></div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">

        </div>


    </div>
</div>








    