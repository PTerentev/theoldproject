@model Domain.Entities.Account
@{
    ViewBag.Title = "Личный кабинет";
}
@try
{
    <div id="main" style="background: url(../../fonts/texture/3-fon-dlya-sayta.png)">

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 ">
                </div>
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 " style="background-color: #101210; border: 6px double black; border-radius: 16px; min-height: 500px; margin-top: 60px;" id="mainblock">
                    <div class="row" style="background-color: #090809;">

                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 100px; color: white; font-weight: bolder;">
                            <h4>ГЛАВНАЯ / ЛИЧНЫЙ КАБИНЕТ /</h4>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="row">
                                <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1"></div>
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10" style="color: white;">
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 20px;">
                                            <p>Игровой ID:</p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left" style="height: 80px; color: #9A8866; font-size: 20px; font-weight: bolder;">
                                            <p>@Model.Id</p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 20px;">
                                            <p>Логин:</p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left" style="height: 80px; color: #9A8866; font-size: 20px; font-weight: bolder;">
                                            <p>@Model.Login</p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 20px;">
                                            <p>Email:</p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left co12" style="height: 80px; color: #9A8866; font-size: 20px; font-weight: bolder;">
                                            <p>
                                                @Model.Email<a href="#"> <img src="../../fonts/icons8-редактировать-48.png" alt="" style="width: 30px; height: 30px;"></a>
                                            </p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 20px;">
                                            <p>Пароль:</p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left" style="height: 80px; color: #9A8866; font-size: 20px; font-weight: bolder;">
                                            <p>
                                                ••••••<a href="#"> <img src="../../fonts/icons8-редактировать-48.png" alt="" style="width: 30px; height: 30px;"></a>
                                            </p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" style="height: 80px; font-size: 20px;">
                                            <p>Имя Фамилия:</p>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left" style="min-height: 80px; color: #9A8866; font-size: 20px; font-weight: bolder;">
                                            <p>
                                                @Model.FirstName<a href="#"> <img src="../../fonts/icons8-редактировать-48.png" alt="" style="width: 30px; height: 30px;"></a>
                                            </p>
                                            <p>@Model.SecondName</p>

                                        </div>


                                    </div>
                                    <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1"></div>
                                </div>

                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50px;"></div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">

                </div>


            </div>
        </div>
    </div>
}
catch
{
<p>Sorry, our site has a problem :(</p>
}


