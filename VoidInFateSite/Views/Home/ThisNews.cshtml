@model Domain.Entities.Recent
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../Content/specialstyle.css">
    <link rel="SHORTCUT ICON" href="../../fonts/logo/icon.png" type="image/png">
    <title>@Model.Caption</title>
    <link href="../../Content/bootstrap.css" rel="stylesheet" />
    <link href="../../Content/specialstyle.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

</head>

<body>
    <div id="main" style=" background: url(../../fonts/texture/simple_dashed.png)">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1 ">
                </div>
                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10 mainsize" id="mainblock">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-right" style="min-height: 30px;">
                            <a href="/News" style="font-size: 29px; right: 0;color: #FFBF6C;">X</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height: 50px;">
                            <img src="../../fonts/main-news-top.png" alt="" style="width: 100%; top: 0; left: 0; right: 0; height: 100%; position: absolute;">
                        </div>
                    </div>
                    <div class="row" style="background-color: #101010">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="row">
                                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10" style="min-height: 50px; font-size: 40px; color: #FFBF6C;">
                                    <p>@Model.Caption</p>
                                </div>
                                <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2" style="min-height: 50px; font-size: 20px; color: #ADADAA;">
                                    <p>@Model.Time</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 youtubesize text-center" id="video">
                            <div class="container-fluid text-center videosize">
                                @Html.Raw("<img style='width: 100%; top: 0; left: 0; right: 0; height: 100%; position: absolute;' src=\"data:image/jpeg;base64,"
                                          + Convert.ToBase64String(Model.LinkLargeImg) + "\" />")
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="min-height: 200px;">
                            <div style="width: 100%; height: 100%; color: #ADADAA;font-size: 18px;">
                                <p>@Model.FullText</p>
                            </div>
                        </div>


                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="min-height: 50px;font-size: 20px;">
                            <div style="width: 100%; height: 100%; color: #ADADAA;">
                                <p>@Model.Author</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-1 col-md-1 col-lg-1">

                </div>


            </div>
        </div>
    </div>
    <script src="../../Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/scripts/VoidScript.js")




</body>
</html>